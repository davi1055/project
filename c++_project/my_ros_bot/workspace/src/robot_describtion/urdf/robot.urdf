<!-- urdf/my_robot.urdf -->
<robot name="my_robot">

  <!-- 定义机器人的主体部分 -->
  <link name="base_link">
    <visual> <!-- 视觉元素，定义机器人主体的外观 -->
      <geometry> <!-- 几何形状 -->
        <box size="0.5 0.5 0.1"/> <!-- 长方体，尺寸为 0.5x0.5x0.1 -->
      </geometry>
      <material> <!-- 材料属性 -->
        <color rgba="0 1 0 1"/> <!-- 颜色为绿色，不透明 -->
      </material>
    </visual>
  </link>

  <!-- 定义左轮的关节，类型为连续旋转 -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/> <!-- 父连接体是 base_link -->
    <child link="left_wheel"/> <!-- 子连接体是 left_wheel -->
    <origin xyz="-0.25 0 0"/> <!-- 关节在 base_link 中的位置，x 轴上偏移 -0.25 -->
    <axis xyz="0 1 0"/> <!-- 旋转轴为 y 轴 -->
  </joint>

  <!-- 定义左轮 -->
  <link name="left_wheel">
    <visual> <!-- 视觉元素，定义左轮的外观 -->
      <geometry> <!-- 几何形状 -->
        <cylinder radius="0.1" length="0.05"/> <!-- 圆柱体，半径为 0.1，长度为 0.05 -->
      </geometry>
      <material> <!-- 材料属性 -->
        <color rgba="0 0 1 1"/> <!-- 颜色为蓝色，不透明 -->
      </material>
    </visual>
  </link>

  <!-- 定义右轮的关节，类型为连续旋转 -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/> <!-- 父连接体是 base_link -->
    <child link="right_wheel"/> <!-- 子连接体是 right_wheel -->
    <origin xyz="0.25 0 0"/> <!-- 关节在 base_link 中的位置，x 轴上偏移 0.25 -->
    <axis xyz="0 1 0"/> <!-- 旋转轴为 y 轴 -->
  </joint>

  <!-- 定义右轮 -->
  <link name="right_wheel">
    <visual> <!-- 视觉元素，定义右轮的外观 -->
      <geometry> <!-- 几何形状 -->
        <cylinder radius="0.1" length="0.05"/> <!-- 圆柱体，半径为 0.1，长度为 0.05 -->
      </geometry>
      <material> <!-- 材料属性 -->
        <color rgba="0 0 1 1"/> <!-- 颜色为蓝色，不透明 -->
      </material>
    </visual>
  </link>
</robot>
